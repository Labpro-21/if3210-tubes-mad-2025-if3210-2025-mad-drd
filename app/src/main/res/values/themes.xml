<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Purrytify" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Configure the Android system splash screen -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>
    
    <!-- Splash screen theme for Android 12+ -->
    <style name="Theme.Purrytify.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_3</item>
        <item name="postSplashScreenTheme">@style/Theme.Purrytify</item>
    </style>
</resources>